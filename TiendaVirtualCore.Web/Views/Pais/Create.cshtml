@using TiendaVirtualCore.Web.ViewModels.Pais;
@model PaisEditVm
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Pais" asp-action="Create" class="col-6">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New Pais</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombrePais" class="form-label"></label>
            <input asp-for="NombrePais" class="form-control" />
            <span asp-validation-for="NombrePais" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;
            Guardar
        </button>
        <a asp-controller="Pais" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;
            Volver
        </a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}