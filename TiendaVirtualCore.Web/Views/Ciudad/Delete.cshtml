@using TiendaVirtualCore.Web.ViewModels.Ciudad;
@model CiudadListVm
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Ciudad" asp-action="Delete">
    <input type="hidden" asp-for="CiudadId" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Remove City</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCiudad" class="form-label"></label>
            <input asp-for="NombreCiudad" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="NombrePais" class="form-label"></label>
            <input asp-for="NombrePais" disabled class="form-control">
        </div>

        <button type="submit" class="btn btn-danger" style="width:200px">
            <i class="bi bi-trash3"></i>  &nbsp
            Delete
        </button>
        <a asp-controller="Ciudad" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-skip-backward"></i> &nbsp
            Back To List
        </a>

    </div>
</form>
