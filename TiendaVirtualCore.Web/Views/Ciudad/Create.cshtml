@using TiendaVirtualCore.Web.ViewModels.Ciudad;
@model CiudadEditVm
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Ciudad" asp-action="Create" class="col-6">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New City</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCiudad" class="form-label"></label>
            <input asp-for="NombreCiudad" class="form-control" />
            <span asp-validation-for="NombreCiudad" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PaisId" class="form-label"></label>
            <select asp-for="PaisId" asp-items="@Model.Paises" class="form-select"></select>
            <span asp-validation-for="PaisId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px">
            <i class="bi bi-floppy"></i> &nbsp;
            Save
        </button>
        <a asp-controller="Ciudad" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;
            Back To List
        </a>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}