@using TiendaVirtualCore.Web.ViewModels.Categoria;
@model IEnumerable<CategoriaListVm>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row w-75">
        <div class="col-6">
            <h2>Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
           <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
               Nueva Categoria
           </a>
        </div>
    </div>
    <hr />

    <table class="table table-bordered table-striped w-75">
        <thead>
            <tr>
                <th style="width:50%">
                    <label asp-for="@Model.First().NombreCategoria"></label>
                </th>
                <th style="width:27%">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreCategoria</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Categoria" asp-action="Edit" asp-route-categoriaId="@item.CategoriaId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-controller="Categoria" asp-action="Delete" asp-route-categoriaId="@item.CategoriaId">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Borrar
                            </a>

                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        No categories added yet
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

