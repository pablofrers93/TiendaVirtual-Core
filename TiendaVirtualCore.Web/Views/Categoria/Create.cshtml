@using TiendaVirtualCore.Web.ViewModels.Categoria;
@model CategoriaEditVm
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-controller="Categoria" asp-action="Create"class="col-6">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">New Categoria</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="NombreCategoria" class="form-label"></label>
            <input asp-for="NombreCategoria" class="form-control" />
            <span asp-validation-for="NombreCategoria" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" rows="4" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:200px" >
            <i class="bi bi-floppy"></i> &nbsp;
            Guardar</button>
        <a asp-controller="Categoria" asp-action="Index" style="width:200px" class="btn btn-success">
            <i class="bi bi-backspace"></i>  &nbsp;
            Volver 
        </a>
       
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}